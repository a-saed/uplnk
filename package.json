{
  "name": "uplnk-monorepo",
  "private": true,
  "packageManager": "pnpm@9.14.2",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "docs:dev": "pnpm --filter uplnk-docs run dev",
    "docs:build": "pnpm --filter uplnk-docs run build",
    "docs:preview": "pnpm --filter uplnk-docs run preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^20.17.10",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.18.2"
  }
}
